# Mintlayer Wallet Mempool - Docker Environment Configuration
# Copy this file to .env for docker-compose usage

# Wallet Mempool Configuration
WALLET_MEMPOOL_HOST_PORT=3050

# Node RPC Configuration (should match your main docker-compose)
NODE_RPC_USERNAME=user
NODE_RPC_PASSWORD=user
NODE_RPC_HOST_PORT=13030
NODE_P2P_HOST_PORT=13031

# API Server Configuration (should match your main docker-compose)
API_SERVER_HOST_PORT=3000
API_SERVER_POSTGRES_USER=postgres
API_SERVER_POSTGRES_PASSWORD=password
API_SERVER_POSTGRES_DB=mintlayer

# Docker Configuration
DOCKERHUB_USERNAME=your-dockerhub-username
ML_SOFTWARE_VERSION=latest

# Rust Configuration
RUST_LOG=info
RUST_BACKTRACE=1

# User/Group IDs (optional, for file permissions)
ML_USER_ID=1001
ML_GROUP_ID=1001
