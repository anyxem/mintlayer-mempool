# Mintlayer Wallet Mempool - Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Server Configuration
NODE_ENV=production
PORT=3000

# Mintlayer Node Configuration
NODE_POST_TRANSACTION_URL=https://api-server.mintlayer.org/api/v2/transaction
NODE_GET_TRANSACTION_URL=https://api-server.mintlayer.org/api/v2/transaction

# Database Configuration
DB_PATH=./data/transactions.db

# Logging Configuration
LOG_LEVEL=info

# CORS Configuration (optional - if not set, all origins are allowed)
# CORS_ORIGINS=https://wallet.mintlayer.org,https://explorer.mintlayer.org

# Cleanup Configuration
CLEANUP_ENABLED=true
CLEANUP_INTERVAL_MS=300000
CLEANUP_BATCH_SIZE=50
CLEANUP_MAX_AGE_HOURS=24
